# ===============================================
# KnowFlow Eval - 环境变量配置
# ===============================================

# -----------------
# 服务配置
# -----------------
DEBUG=false
PORT=5002
HOST=0.0.0.0

# -----------------
# API 密钥配置
# -----------------

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# SiliconFlow (硅基流动)
SILICONFLOW_API_KEY=sk-your-siliconflow-api-key-here
SILICONFLOW_BASE_URL=https://api.siliconflow.cn/v1

# DeepSeek
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com

# 智谱 AI
ZHIPU_API_KEY=your-zhipu-api-key-here
ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4/

# RAGFlow
RAGFLOW_API_KEY=ragflow-your-api-key-here
RAGFLOW_BASE_URL=http://your-server-ip:9380/api/v1

# -----------------
# 模型配置
# -----------------
DEFAULT_MODEL=Qwen/Qwen2.5-32B-Instruct
DEFAULT_EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5

# -----------------
# 评估配置
# -----------------
EVALUATION_TIMEOUT=300
MAX_WORKERS=2
MAX_RETRIES=2

# -----------------
# 存储配置
# -----------------
TEMP_DIR=tmp
DATASETS_DIR=tmp/datasets
REPORTS_DIR=tmp/evaluation/reports

# -----------------
# 日志配置
# -----------------
LOG_LEVEL=INFO
LOG_FILE=logs/evaluation.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# -----------------
# 安全配置
# -----------------
MAX_CONTENT_LENGTH=104857600
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# -----------------
# 数据库配置
# -----------------
DATABASE_PATH=data/evaluation.db
